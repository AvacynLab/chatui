{
  "builds": [
    { "src": "package.json", "use": "@vercel/node" },
    { "src": "vite.config.js", "use": "@vercel/node" },
    { "src": "build/index.js", "use": "@vercel/node" },
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/" }
  ]
}
